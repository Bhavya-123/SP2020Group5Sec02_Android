<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top">

    <TextView
        android:id="@+id/jobnameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Software Developer - ABC Solutions"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <LinearLayout
            android:id="@+id/dyn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

        <TextView
            android:id="@+id/jobtitleheaderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title: "
            android:layout_margin="10dp"
          />

        <TextView
            android:id="@+id/jobtitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Java Developer"
            android:layout_marginStart="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dyn_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
       >

        <TextView
            android:id="@+id/descheaderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Description: " />

        <TextView
            android:id="@+id/jobdescTV"
            android:layout_width="259dp"
            android:layout_height="53dp"
            android:text="We are looking for a java developer with experience in building high performance applications." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dyn_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/majorheaderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Major: "
           />

        <TextView
            android:id="@+id/majorTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            android:layout_marginStart="100dp"
            />
           </LinearLayout>

    <LinearLayout
        android:id="@+id/dyn_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/qualheaderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualifications: "
            android:layout_margin="10dp"
           />

        <TextView
            android:id="@+id/qualiTV"
            android:layout_width="215dp"
            android:layout_height="32dp"
            android:text="BS/MS degree in Computer Science or any related subject."
            android:layout_marginStart="100dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dyn_layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/deadlineheaderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline: "
            android:layout_margin="10dp"

            />

        <TextView
            android:id="@+id/deadlineTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03/10/2020"
            android:layout_marginStart="100dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/changeBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKE A CHANGE"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/removeBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE"
        android:layout_gravity="center"
        />

</LinearLayout>