<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StaffSignUp">
    <TextView
        android:id="@+id/StaffsignupTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Staff Signup"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <EditText
        android:id="@+id/stafffirstnameET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textSize="16dp"
        android:inputType="textPersonName"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StaffsignupTV"
        app:layout_constraintVertical_bias="0.097" />

    <EditText
        android:id="@+id/stafflastnameET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/stafffirstnameET"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/stafffirstnameET"
        app:layout_constraintTop_toBottomOf="@+id/stafffirstnameET"
        app:layout_constraintVertical_bias="0.076" />


    <EditText
        android:id="@+id/staffempIdET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Employee Id"
        android:textSize="16dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/stafflastnameET"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="@id/stafffirstnameET"
        app:layout_constraintTop_toBottomOf="@+id/stafflastnameET"
        app:layout_constraintVertical_bias="0.118" />

    <EditText
        android:id="@+id/staffpasswordET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/stafflastnameET"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/stafffirstnameET"
        app:layout_constraintTop_toBottomOf="@+id/staffempIdET"
        app:layout_constraintVertical_bias="0.171" />

    <Button
        android:id="@+id/staffsignupBTN"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:text="SIGN UP"
        android:textSize="16dp"
        android:background="@color/cardview_dark_background"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staffpasswordET"
        app:layout_constraintVertical_bias="0.329" />

</androidx.constraintlayout.widget.ConstraintLayout>